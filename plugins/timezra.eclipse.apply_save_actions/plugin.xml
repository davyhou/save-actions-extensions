<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="timezra.eclipse.apply_save_actions.commands.category"
            name="%commandCategoryName">
      </category>
      <command
            name="%applySaveActionsLabel"
            categoryId="timezra.eclipse.apply_save_actions.commands.category"
            id="timezra.eclipse.apply_save_actions.commands.applySaveActions">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="timezra.eclipse.apply_save_actions.commands.applySaveActions"
            class="timezra.eclipse.apply_save_actions.handlers.ApplySaveActions">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="timezra.eclipse.apply_save_actions.commands.applySaveActions"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M2+M3+T,S"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="timezra.eclipse.apply_save_actions.commands.applySaveActions"
               icon="icons/full/obj16/sample.gif"
               id="timezra.eclipse.apply_save_actions.menus.applySaveActions"
               label="%applySaveActionsLabel"
               mnemonic="S"
               style="push"
               tooltip="%applySaveActionsTooltip">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        operator="and">
                     <or>
                        <adapt
                              type="org.eclipse.jdt.core.IJavaProject">
                        </adapt>
                        <adapt
                              type="org.eclipse.jdt.core.IPackageFragmentRoot">
                        </adapt>
                        <adapt
                              type="org.eclipse.jdt.core.IPackageFragment">
                        </adapt>
                        <adapt
                              type="org.eclipse.jdt.core.ICompilationUnit">
                        </adapt>
                     </or>
                     <adapt
                           type="org.eclipse.core.resources.IResource">
                     </adapt></iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
